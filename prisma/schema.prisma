model Accounts {
  id           String @default(uuid())
  accountId    String @unique
  contactNo    String
  profession   String
  age          Int
  education    String
  profileImage String
  accountType  String
  citizenShip  String
  userId       String
  user         User   @relation(fields: [userId], references: [id])

  @@map("accounts")
}
