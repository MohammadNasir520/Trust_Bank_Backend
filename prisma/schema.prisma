generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  name      String
  email     String     @unique
  password  String
  role      UserRole   @default(client)
  createdAt DateTime   @default(now())
  // accounts  Account[]
  accounts  Accounts[]

  @@map("users")
}

enum UserRole {
  super_admin
  admin
  client
}

